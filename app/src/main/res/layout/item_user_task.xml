<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv_userTaskItem"
        android:padding="@dimen/padding_medium"
        app:cardCornerRadius="@dimen/corner_normal"
        app:cardElevation="@dimen/elevation_small"
        app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_userTaskItemContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_regular">

        <com.slice.verifly.customview.CircularImageView
                android:id="@+id/civ_userImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:strokeWidth="2dp"
                app:strokeColor="@color/colorAccent"
                app:highlightEnable="false"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:src="@drawable/ic_account_circle" />

        <TextView
                android:id="@+id/tv_userName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_normal"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/margin_normal"
                android:layout_marginLeft="@dimen/margin_normal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/civ_userImage"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Aditya Sharma" />

        <TextView
                android:id="@+id/tv_userCollege"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_medium"
                android:layout_marginStart="@dimen/margin_normal"
                android:layout_marginLeft="@dimen/margin_normal"
                android:layout_marginTop="@dimen/margin_small"
                app:layout_constraintTop_toBottomOf="@id/tv_userName"
                app:layout_constraintStart_toEndOf="@id/civ_userImage"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Baldwin High School, Bangalore" />

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_tasksNamesList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small1"
                app:layout_constraintTop_toBottomOf="@id/civ_userImage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        <TextView
                android:id="@+id/tv_pendingTasksCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_medium1"
                android:layout_marginTop="@dimen/margin_small1"
                app:layout_constraintTop_toBottomOf="@id/rv_tasksNamesList"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="1 task is pending."/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>